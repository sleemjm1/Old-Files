<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <EditText
        android:layout_width="194dp"
        android:layout_height="wrap_content"
        android:id="@+id/etImageString"
        android:layout_x="147dp"
        android:layout_y="20dp" />

    <EditText
        android:layout_width="194dp"
        android:layout_height="wrap_content"
        android:id="@+id/etLatitude"
        android:layout_x="147dp"
        android:layout_y="60dp" />

    <EditText
        android:layout_width="194dp"
        android:layout_height="wrap_content"
        android:id="@+id/etLongitude"
        android:layout_x="147dp"
        android:layout_y="100dp" />

    <EditText
        android:layout_width="194dp"
        android:layout_height="wrap_content"
        android:id="@+id/etComment"
        android:layout_x="147dp"
        android:layout_y="140dp" />

    <EditText
    android:layout_width="194dp"
    android:layout_height="wrap_content"
    android:id="@+id/etRating"
    android:layout_x="147dp"
    android:layout_y="180dp" />

    <EditText
    android:layout_width="194dp"
    android:layout_height="wrap_content"
    android:id="@+id/etImageID"
    android:layout_x="147dp"
    android:layout_y="220dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="String"
        android:id="@+id/tvImageString"
        android:layout_x="19dp"
        android:layout_y="30dp" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Latitude"
        android:id="@+id/tvLatitude"
        android:layout_x="19dp"
        android:layout_y="70dp" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Longitude"
        android:id="@+id/tvLongitude"
        android:layout_x="19dp"
        android:layout_y="120dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Comment"
        android:id="@+id/textView"
        android:layout_x="19dp"
        android:layout_y="160dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Rating"
        android:id="@+id/tvRating"
        android:layout_x="19dp"
        android:layout_y="200dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Image ID"
        android:id="@+id/tvImageID"
        android:layout_x="19dp"
        android:layout_y="240dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/btnSubmit"
        android:layout_x="129dp"
        android:layout_y="288dp" />

    <TextView
        android:layout_width="306dp"
        android:layout_height="109dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="JSON Output goes here"
        android:id="@+id/tvJSONOutput"
        android:layout_x="30dp"
        android:layout_y="368dp" />

</AbsoluteLayout>
