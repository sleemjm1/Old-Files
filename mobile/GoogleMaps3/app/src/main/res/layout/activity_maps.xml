<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
<fragment
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="393dp"
    android:layout_height="440dp" android:id="@+id/map" tools:context=".MapsActivity"
    android:name="com.google.android.gms.maps.SupportMapFragment" />

    <fragment
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/picview"
        android:name="bit.weilytw1.googlemaps3.PicFragment"
        tools:layout="@layout/picmapp_fragment" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Marker"
        android:id="@+id/btnMarker"
        android:layout_x="221dp"
        android:layout_y="458dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivSelectedPic"
        android:layout_x="5dp"
        android:layout_y="455dp" />

</AbsoluteLayout>